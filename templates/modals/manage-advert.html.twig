{% if form_advert is defined and form_advert is not empty %}
  <div class="modal fade{% if is_advert_edit == true %} -is-edit{% endif %}" id="modal-manage-advert" tabindex="-1" aria-labelledby="modal-manage-advert-label" aria-hidden="true"
    {% if is_advert_edit == true %}data-bs-backdrop="static"{% endif %}>
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal-manage-advert-label">Ajouter une annonce</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        {{ form_start(form_advert, { 'attr' : { 'class': 'form form-advert' } }) }}
          <div class="modal-body">
            {# Form inputs #}
            <div class="form--inputs">
              <div class="row g-3">
                <div class="col-12 col-md-5 col-lg-6 form-group">
                  {{ form_label(form_advert.title) }}
                  {{ form_widget(form_advert.title) }}
                  {{ form_errors(form_advert.title) }}
                </div>
                <div class="col-12 col-md-4 col-lg-3 form-group">
                  {{ form_label(form_advert.name) }}
                  {{ form_widget(form_advert.name) }}
                  {{ form_errors(form_advert.name) }}
                </div>
                <div class="col-12 col-md-3 col-lg-3 form-group">
                  {{ form_label(form_advert.price) }}
                  <div class="input-group">
                    {{ form_widget(form_advert.price) }}
                    <span class="input-group-text fw-bold px-3">€</span>
                  </div>
                  {{ form_errors(form_advert.price) }}
                </div>

                <div class="col-12 form-group">
                  {{ form_label(form_advert.description) }}
                  {{ form_widget(form_advert.description) }}
                  {{ form_errors(form_advert.description) }}
                </div>

                <div class="col-12 form-group form-multi-select{% if is_advert_edit == true %} d-none{% endif %}">
                  <legend class="col-form-label required">Vinyle(s) à vendre</legend>
                  <div class="border-0 p-0">
                    <ul class="list-group">
                    {% for vinyl in vinyls_to_sale %}
                      {% if vinyl.quantityAvailable > 0 %}
                        {% set artists_str = null %}
                        {% if vinyl.artists is not empty %}
                          {% for artist in vinyl.artists %}
                            {% set artists_str = artists_str ~ artist.name ~ (loop.last == false ? ', ' : '') %}
                          {% endfor %}
                        {% endif %}
                        <li class="list-group-item -item-vinyl" data-vinyl-id="{{ vinyl.id }}">
                          <div class="row align-items-center">
                            <div class="col-9 col-lg-10">
                              <div class="row align-items-center">
                                <div class="-vinyl-tracks col-12 col-lg-8" data-vinyl-rpm="{{ vinyl.rpm }}">
                                  <span class="text-muted">Face A:</span> <b class="-vinyl-track-A">{{ vinyl.trackFaceA }}</b><br>
                                  <span class="text-muted">Face B:</span> <b class="-vinyl-track-B">{{ vinyl.trackFaceB }}</b><br>
                                </div>
                                <div class="-vinyl-artists col-12 col-lg-4">
                                  <small><span class="text-muted">Par</span> <i class="-list">{{ artists_str }}</i></small>
                                </div>
                              </div>
                            </div>
                            <div class="col-3 col-lg-2 text-center">
                              <span class="form-control-quantity" data-qty-max="{{ vinyl.quantityAvailable }}">
                                <span class="btn-qty icon-minus-square disabled" data-qty-type="-1"></span>
                                <span class="qty-amount">0</span>
                                <span class="btn-qty icon-plus-square" data-qty-type="+1"></span>
                                <input class="advert-vinyl-qty" type="hidden" name="advert_vinyl_qty[{{ vinyl.id }}][]"
                                  id="advert_vinyl_{{ vinyl.id }}_qty" value="0">
                              </span>
                            </div>
                          </div>
                        </li>
                      {% endif %}
                    {% endfor %}
                    </ul>
                  </div>
                  <p class="-vinyls-total-selected small mt-2 mb-0 text-end text-muted">
                    Total vinyles: <b class="-amount">0</b>
                  </p>
                </div>

                {% if is_advert_edit == true and advert_to_edit.inSales is not empty %}
                <div class="col-12 form-group">
                  <legend class="col-form-label fw-bold pt-0">Vinyle(s) en vente</legend>
                  <div class="table-responsive rounded" style="max-height: 18rem">
                    <table class="vinyls-entities table table-bordered table-striped table-hover table-light mb-0">
                      <thead>
                        <tr>
                          <th scope="col" class="col-id">#</th>
                          <th scope="col" class="col-rpm">T.</th>
                          <th scope="col" class="col-track">Face A</th>
                          <th scope="col" class="col-track">Face B</th>
                          <th scope="col" class="col-artist">Artiste(s)</th>
                          <th scope="col" class="col-quantity">Qté</th>
                        </tr>
                      </thead>
                      <tbody>
                      {% set total_qty_in_sale = 0 %}
                      {% for inSale in advert_to_edit.inSales %}
                        {% set vinyl = inSale.vinyl %}
                        <tr data-vinyl-id="{{ vinyl.id }}">
                          <th scope="row" class="col-id">{{ vinyl.id }}</th>
                          <td class="col-rpm">{{ vinyl.rpm }}</td>
                          <td class="col-track" data-track-face="A">
                            {{ vinyl.trackFaceA }}&nbsp;<span class="-icon-play icon-play-circle"></span>
                          </td>
                          <td class="col-track" data-track-face="B">
                            {{ vinyl.trackFaceB }}&nbsp;<span class="-icon-play icon-play-circle"></span>
                          </td>
                          <td class="col-artist">
                            {% set artists_str = null %}
                            {% if vinyl.artists is not empty %}
                              {% for artist in vinyl.artists %}
                                {% set artists_str = artists_str ~ artist.name ~ (loop.last == false ? ', ' : '') %}
                                <a href="{{ path('artists_infos', { id: artist.id }) }}">{{ artist.name }}</a>{% if loop.last == false %}, {% endif %}
                              {% endfor %}
                            {% endif %}
                          </td>
                          <td class="col-quantity">{{ inSale.quantity }}</td>
                        </tr>
                        {% set total_qty_in_sale = total_qty_in_sale + inSale.quantity %}
                      {% endfor %}
                      </tbody>
                    </table>
                  </div>
                  <p class="-vinyls-total-selected small mt-2 mb-0 text-end text-muted">
                    Total vinyles: <b class="-amount">{{ total_qty_in_sale }}</b>
                  </p>
                </div>
                {% endif %}

                <div class="col-12 form-group form-image-lib">
                  {{ form_label(form_advert.images) }}
                  {{ form_widget(form_advert.images) }}
                  {{ form_errors(form_advert.images) }}
                  {% set images_library %}
                    <div class="-images-library{% if advert_to_edit is not null and advert_to_edit.images is not empty %} -has-images{% endif %}" data-initial-text="Aucune photo sélectionnée">
                      {% if advert_to_edit is not null and advert_to_edit.images is not empty %}
                        {% for img in advert_to_edit.images %}
                          <span class="-item -in-database ratio ratio-1x1" style="background-image: url({{ asset(img.path) }})"
                            data-id-image="{{ img.id }}">
                            <button class="btn btn-danger px-2 pt-2 pb-1" type="button"
                              data-confirm-href="{{ path('image_delete', { id: img.id }) }}" data-confirm-body="Êtes-vous sûr de vouloir supprimer cette image ?"
                                data-confirm-link-class="btn-delete-img" data-confirm-always-close="true" data-bs-toggle="modal" data-bs-target="#modal-confirm-delete">
                              <span class="icon-file-minus"></span>
                              <span class="sr-only"></span>
                            </button>
                          </span>
                        {% endfor %}
                      {% else %}
                        <span class="-text">Aucune photo sélectionnée</span>
                      {% endif %}
                    </div>
                  {% endset %}
                  {{ images_library|spaceless }}
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer justify-content-center">
            <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
            {{ form_widget(form_advert.send) }}
          </div>
        {{ form_end(form_advert) }}
      </div>
    </div>
  </div>
{% endif %}
